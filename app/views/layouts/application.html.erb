<!DOCTYPE html>
<html>
  <head>
    <title>JobSchedule</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-eval': false %>
  </head>

  <body>
  <ul class="nav-bar">
    <%= link_to  jobs_path(finished: 'false') do %>
        <li class="nav-tab">Active Jobs</li>
    <% end %>
    <%= link_to  jobs_path do %>
        <li class="nav-tab">Available Reports</li>
    <% end %>
    <%= link_to  jobs_path do %>
        <li class="nav-tab">Locations</li>
    <% end %>

    <%= yield(:local_menu) %>
  </ul>
  <br />
  <br />
  <br />

  <% if params[:finished] == 'true' %>
      <h2>Finished Jobs</h2>
  <% else %>
      <h2>Current Jobs</h2>
  <% end %>

  <div>
    <%= yield %>
  </div>

  </body>
</html>
